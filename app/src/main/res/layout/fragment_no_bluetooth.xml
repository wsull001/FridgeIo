<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context="com.example.wyattsullivan.fridgeio.FragmentManagerFridge">

    <ImageView
        android:id="@+id/noBluetoothLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_bluetooth_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noBluetoothLogo"
        android:layout_centerHorizontal="true"
        android:text="Bluetooth Unavailable"
        android:textSize="30sp" />
</RelativeLayout>